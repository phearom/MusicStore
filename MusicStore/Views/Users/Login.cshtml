@model MusicStore.Models.User

@{
    ViewBag.Title = "Login";
}

<h2>Login</h2>

@using (Html.BeginForm())
{
    @*@Html.TextBox("UserName", "", new { @class = "form-control" })*@
    @Html.TextBoxFor(model => model.UserName, htmlAttributes: new { @class = "form-control",placeholder="Username", @Value = ViewBag.Username })
    @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
    <br />
    @Html.PasswordFor(model => model.Password, new { @class = "form-control", placeholder = "password" })
    @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
    <br />
    <input type="submit" value="submit" class="btn btn-primary" />
    <h3 class="text-danger">@ViewBag.Message</h3>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}